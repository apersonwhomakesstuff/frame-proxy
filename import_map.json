{
  "imports": {
    // Fresh core
    "$fresh/": "https://deno.land/x/fresh@1.6.1/",
    
    // Preload hooks for SSR
    "preact": "https://esm.sh/preact@10.19.2",
    "preact/hooks": "https://esm.sh/preact@10.19.2/hooks",
    "preact/jsx-runtime": "https://esm.sh/preact@10.19.2/jsx-runtime",
    "preact-render-to-string": "https://esm.sh/preact-render-to-string@6.4.0",

    // Fresh specific runtime for custom middlewares / CSP etc.
    "$fresh/runtime.ts": "https://deno.land/x/fresh@1.6.1/runtime.ts",
    "$fresh/src/": "https://deno.land/x/fresh@1.6.1/src/",
    
    // For signals (optional)
    "@preact/signals": "https://esm.sh/@preact/signals@1.2.1",
    "@preact/signals-core": "https://esm.sh/@preact/signals-core@1.2.1",

    // Utility libraries (optional but common)
    "std/": "https://deno.land/std@0.224.0/",
    "lodash": "https://esm.sh/lodash-es@4.17.21"
  }
}
